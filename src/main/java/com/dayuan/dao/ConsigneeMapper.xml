<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dayuan.dao.ConsigneeMapper">

	<select
		id="selectConsignee"
		resultType="Consignee">
		select
		id,
		uid,
		name,
		mobile,
		privince,
		city,
		area,
		address,
		is_default
		from
		g_consignee
		<where>
			<if test="uid !=null ">
				AND uid = #{uid}
			</if>
			<if test="isDefault !=null ">
				AND is_default = #{isDefault}
			</if>
		</where>
	</select>

	<update id="updateConsignee">
		update g_consignee
		 <trim prefix="set" suffixOverrides=",">
			<if test="isDefault!=null">
				is_default=#{isDefault},
			</if>
			<if test="name!=null">
				name=#{name},
			</if>
			<if test="mobile!=null">
				mobile=#{mobile},
			</if>
			<if test="city!=null">
				city=#{city},
			</if>
			<if test="area!=null">
				area=#{area},
			</if>
			<if test="address!=null">
				address=#{address},
			</if>
		</trim>
		where id = #{id} and uid = #{uid}
	</update>

	<insert
		id="insertConsignee"
		useGeneratedKeys="true"
		keyProperty="id">
		insert into g_consignee
		(uid,name,mobile,privince,city,area,address,is_default)
		values
		(#{uid},#{name},#{mobile},#{privince},#{city},#{area},#{address},#{isDefault})
	</insert>

	<delete id="deleteConsignee">
		delete from g_consignee where id = #{id} and uid=#{uid}
	</delete>
</mapper>