<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dayuan.dao.BrandMapper">

	<select
		id="selectCategoryByPid"
		resultType="Category">
		select
		name,			<!-- 品牌名 -->
		from g_brand where id = #{id}
	</select>

</mapper>